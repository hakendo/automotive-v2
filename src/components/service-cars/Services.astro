---
// Contenido actualizado con los 4 servicios de Automotive Consulting
const services = [
  {
    img: '/image-service-01.webp',
    title: 'Asesoría Automotriz',
    desc: 'Asesoramos para encontrar tu vehículo, presupuesto y precios de mercado.'
  },
  {
    img: '/image-service-02.webp',
    title: 'Compra Venta',
    desc: 'Stock de vehículos con entrega inmediata. Compramos tu auto.'
  },
  {
    img: '/image-service-03.webp',
    title: 'Trámites Notariales',
    desc: 'Gestión profesional de documentación vehicular con trámites digitales.'
  },
  {
    img: '/image-service-04.webp',
    title: 'Crédito Automotriz',
    desc: 'Compra con financiamiento y múltiples formas de pago.'
  }
];
---

<section class="py-16 bg-white relative">
  <div class="md:w-7xl mx-auto px-4">
    <h2 class="text-center text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-4">Servicios</h2>
    <p class="text-xl text-center text-gray-600 mb-12 max-w-4xl mx-auto">Asesoramiento automotriz especializado en compra y venta de vehículos con mas de 10 años de experiencia en el sector.</p>

    {/* Grid ajustado para 4 columnas en desktop y 2 en tablet/móvil */}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <div class="relative rounded-2xl overflow-hidden shadow-lg group">
          <img src={service.img} alt={service.title} class="w-full h-64 object-cover object-center group-hover:scale-105 transition-transform duration-300" />
          <div class="absolute inset-0 bg-black/50 flex flex-col justify-center items-center p-4 text-center">
            <h3 class="text-white text-2xl font-bold mb-2 text-center drop-shadow-lg">{service.title}</h3>
            <p class="text-white text-base text-center opacity-90 drop-shadow-md">{service.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>