---
const navLinks = [
    { name: "Inicio", href: "/" },
    { name: "Nosotros", href: "/nosotros" },
    { name: "Catálogo", href: "/catalogo" },
    { name: "Contacto", href: "/contacto" }
];
---

<button class="hamburger" type="button" aria-label="Abrir menú">
  <svg class="hamburger-icon" width="24" height="18" viewBox="0 0 24 18" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path class="line line-1" d="M2 2H22" stroke="#20B3C2" stroke-width="3" stroke-linecap="round"/>
    <path class="line line-2" d="M2 9H22" stroke="#20B3C2" stroke-width="3" stroke-linecap="round"/>
    <path class="line line-3" d="M2 16H22" stroke="#20B3C2" stroke-width="3" stroke-linecap="round"/>
  </svg>
</button>

  <div class="movil-links fixed inset-0 bg-black/20 backdrop-blur-sm z-50 hidden">
    <div class="absolute inset-0" onclick="document.querySelector('.movil-links').classList.add('hidden')"></div>
    
    <div class="absolute top-24 right-4 left-4 max-w-sm mx-auto bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden animate-slide-down">
      
      <div class="bg-gradient-to-r from-gray-800 to-black px-6 py-4">
        <div class="flex items-center justify-between">
          <h3 class="text-white font-semibold text-lg">Menú</h3>
          <button onclick="document.querySelector('.movil-links').classList.add('hidden')" 
                  class="text-white/80 hover:text-white transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <div class="py-2">
         {navLinks.map((link, index) => (
          <a href={link.href} 
             class="group flex items-center px-6 py-4 text-gray-800 hover:bg-blue-50 transition-all duration-200 border-b border-gray-100 last:border-b-0">
            
            <div class="w-10 h-10 bg-ac-blue/10 text-ac-blue rounded-full flex items-center justify-center mr-4 group-hover:bg-ac-blue/20 transition-all">
              {link.name === "Inicio" && <i class="fas fa-home"></i>}
              {link.name === "Nosotros" && <i class="fas fa-users"></i>}
              {link.name === "Catálogo" && <i class="fas fa-car"></i>}
              {link.name === "Contacto" && <i class="fas fa-envelope"></i>}
            </div>

            <div class="flex-1">
              <span class="font-medium text-gray-900 group-hover:text-ac-blue transition-colors">
                {link.name}
              </span>
            </div>

            <svg class="w-5 h-5 text-gray-400 group-hover:text-ac-blue transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        ))}
         <a href="/contacto" class="group flex items-center px-6 py-4 text-gray-800 hover:bg-blue-50 transition-all duration-200">
            <div class="w-10 h-10 bg-ac-blue/10 text-ac-blue rounded-full flex items-center justify-center mr-4 group-hover:bg-ac-blue/20 transition-all">
                <i class="fas fa-handshake"></i>
            </div>
            <div class="flex-1">
                <span class="font-medium text-gray-900 group-hover:text-ac-blue transition-colors">Consignación</span>
            </div>
             <svg class="w-5 h-5 text-gray-400 group-hover:text-ac-blue transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
        </a>
      </div>
    </div>
  </div>


<script is:inline>
  document.addEventListener("DOMContentLoaded", function() {
    const hamburger = document.querySelector(".hamburger");
    const mobileMenu = document.querySelector(".movil-links");

    if (hamburger && mobileMenu) {
      hamburger.addEventListener("click", function(event) {
        event.stopPropagation();
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>

<style>
  .hamburger {
    border-radius: 12px;
    cursor: pointer;
    padding: 12px;
    z-index: 1000;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  .animate-slide-down {
    animation: slideDown 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>